= render 'shared/header'
- breadcrumb :listing
= render 'shared/breadcrumbs'
.mypage
  .mypage__box
    = render 'shared/side_bar'
    .listing
      .listing__box
        .listing__box__title
          出品した商品
        .listing__box__list
          .listing__box__list__a
            出品中
          .listing__box__list__b
            取引中
          .listing__box__list__c
            売却済
        .listing__box__items
          - @items.each do |item|
            - unless item.buyer_id?
              = link_to edit_item_path(item),class: "listing-link" do
                .item
                  = image_tag "#{item.photos[0].image}", size: "48"
                  .item__body
                    .item__body__name
                      = item.name
                    .item__body__under
                      出品中
= render 'shared/footer' 
= render 'shared/red_icon'

