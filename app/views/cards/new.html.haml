= render "signup/header"
.card-infomation
  .card-infomation__title
    %p クレジットカード情報入力
  .card-infomation__main
    = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm" )do
      .card-infomation__main__number
        %label.tomo-number カード番号
        %p.hissu 必須
        = text_field_tag "number", "", class: "kito-number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        %ul.card-number__photo
          %li
            %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?273499512" ,width:"49px",height:"20px"}
          %li
            %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?273499512" ,width:"49px",height:"20px"}
          %li
            %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?273499512" ,width:"49px",height:"20px"}
          %li
            %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?273499512" ,width:"49px",height:"20px"}
          %li
            %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?273499512" ,width:"49px",height:"20px"}
          %li
            %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?273499512" ,width:"49px",height:"20px"}
          %li
            %img{src:"https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?273499512" ,width:"49px",height:"20px"}
        .card-infomation__main__number__line
          %label.tomo-number 有効期限
          %p.hissu 必須
        .display
          %select#exp_month{name: "exp_month", type: "text",class:"select-tomo"}
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span 月
          %select#exp_year{name: "exp_year", type: "text",class:"select-tomo"}
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span 年
        .card-infomation__main__back
          %label.tomo-number  セキュリティコード
          %p.hissu 必須
          = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
          #card_token
          = submit_tag "追加する", id: "token_submit",class:"btn-red"
= render "signup/footer"