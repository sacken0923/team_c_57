= render "signup/header-logo"
.sing-up__main
  .sing-up__main__list
    .sing-up__main__list__top
      %p アカウントをお持ちでない方はこちら
      = link_to signup_index_path ,class:"blue-btn"do
        新規会員登録
    .sing-up__main__list__icon
      %button{class: "facebook-button button-list"}
        = fa_icon "facebook-square",class:"facebook-icon"
        %h2.tomo-text-2 Facebookでログイン
      %button{class: "google-buuton button-list"}
        = fa_icon "google",class:"google-icon"
        %h2.tomo-text-3 Googleでログイン
    .sing-up__main__list__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス",class:"input-tomo"
        .field
          %br/
          = f.password_field :password, autocomplete: "current-password",placeholder:"パスワード",class:"input-tomo"
        .field
          .g-recaptcha.signup-recaptcha{"data-sitekey" => "6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc"}
            %div{:style => "width: 304px; height: 78px;"}
              %div
                %iframe{:frameborder => "0", :height => "78", :name => "a-l2vonwx3yve", :role => "presentation", :sandbox => "allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox", :scrolling => "no", :src => "https://www.google.com/recaptcha/api2/anchor?ar=1&k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&hl=ja&v=v1565591531251&size=normal&cb=1a6f0guo15z", :width => "304"}
              %textarea#g-recaptcha-response.g-recaptcha-response{:name => "g-recaptcha-response", :style => "width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"}
          = f.submit "ログイン",class:"red-btn"
          = link_to "#" ,class:"password" do
            パスワードをお忘れの方
= render "signup/footer"
