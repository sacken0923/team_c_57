= render 'header'
.member-main__address
  %h2.member-main__title__text 住所入力
  = form_for  @user, url:signup_index_path , method: :post do |f|
    .form-list
      %label　お名前
      %span.required 必須
      = f.text_field :address_last_name, placeholder: "例) 山田"
      = f.text_field :address_first_name, placeholder: "例) 綾"
    .form-list
      %label　お名前カナ
      %span.required 必須
      = f.text_field :kana_address_last_name, placeholder: "例) ヤマダ"
      = f.text_field :kana_address_first_name, placeholder: "例) アヤ"
    .form-list
      %label　郵便番号
      %span.required 必須
      = f.text_field :postal_code, placeholder: "例) 123-4567"
    .form-list
      %label　都道府県
      %span.required 必須
      = f.text_field :prefecture, placeholder: "例) 愛知県"
    .form-list
      %label　市町村
      %span.required 必須
      = f.text_field :city, placeholder: "例) 刈谷市"
    .form-list
      %label　番地
      %span.required 必須
      = f.text_field :address, placeholder: "例) 青山1-1-3"
    .form-list
      %label　建物名
      %span.required 任意
      = f.text_field :building, placeholder: "例) 東京タワー"
    .form-list
      %label　電話
      %span.required 任意
      = f.text_field :home_tel, placeholder: "例) 09011111111"
      = f.submit  "次へ進む",class:"button-red"
= render 'footer'